{{#if params}}
	<style type="text/css">
		body { 
		  background: url({{params.thumbnail}}) no-repeat center center fixed; 
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
		}
	
	</style>
	
	
	<span class="highlightme" style="font-size: 15px;"><a href="/" style="text-decoration:none;">&larr; Goto Home</a></span>
	<br />
	<span class="highlightme" style="font-size: 40px;">{{params.title}}</span>
		
	<ul style="list-style-type: none; margin-top: 20px;" class="babu">
		{{#each params.formats}}
		    {{#if this.width}}
				<li>
					<a class="babu" style="color: #37FD36;" target="_blank" title="Right click -> Save As.." href="{{this.url}}">
						[{{this.ext}}] Download Video - {{this.format}} {{#if this.filesize}}- {{this.filesize}}{{/if}}
					</a>
				</li>
			{{else}}
				{{#if this.asr}}
				    <li>
						<a class="babu" target="_blank" title="Right click -> Save As.." href="{{this.url}}">
							[{{this.ext}}] Download Audio Only - {{this.format}}
						</a>
					</li>
				{{else}}
					<li>
						<a class="babu" style="color: #F85070;" target="_blank" title="Right click -> Save As.." href="{{this.url}}">
							[{{this.ext}}] Download Video Only - {{this.format}}
						</a>
					</li>
				{{/if}}
			{{/if}}
		{{/each}}
	</ul>
{{/if}}